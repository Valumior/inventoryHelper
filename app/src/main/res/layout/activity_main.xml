<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mn.inventoryhelper.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0px"
        android:layout_weight="1"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/readQRButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Czytaj Kod QR"/>
    <Button
        android:id="@+id/getAllRoomsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pobierz pokoje"/>

    <Button
        android:id="@+id/getAllAddressesButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pobierz Adresy"/>

    <Button
        android:id="@+id/getInventoryOrdersButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inwentaryzacja"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0px"
        android:layout_weight="1"
        android:visibility="invisible"/>

</LinearLayout>
